@{
    ViewBag.Title = "Home Page";
}
<br />
<h2>@ViewBag.Message</h2>
<br />
<div class="row" style="border-bottom: 5px solid #003a69;">
    <div class="col-md-4">
        <div style="border-left: 2px solid #003a69; padding-left: 5px; font-weight: 400; font-size: 18px">
            <img src="~/Content/Images/DFELogo.png" height="38" /><br />
            Department<br />
            for Education
        </div>
    </div>
    <div class="col-md-8">
        @{
            if (User.IsInRole("CanCreateJobs"))
            {
                <p>@Html.ActionLink("Create job", "Create", "Jobs", null, new { @class = "btn btn-primary" })</p>
            }
        }
        <p>@Html.ActionLink("View jobs", "Index", "Jobs", null, new { @class = "btn btn-primary" })</p>
        @{ 
            if (!User.IsInRole("CanCreateJobs"))
            {
                <br />
                <br />
            }
        }
        <br />
        <br />
    </div>
</div>
